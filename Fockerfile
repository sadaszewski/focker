base: freebsd-latest

steps:
  - run: |
      pkg -y install -y python3 && \
      pkg -y install -y py37-pip
  - run: |
      pkg install -y py37-yaml
  - copy:
    - [ '/tmp/x', '/etc/x' ]
    - [ 'focker-compose.yml', '/etc/focker-compose.yml' ]
  - run: |
      pkg install py37-certbot
